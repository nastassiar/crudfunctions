{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "put"
      ],
      "route": "api/{id}"
    },
    {
      "name": "documents",
      "type": "documentdb",
      "direction": "in",
      "databaseName": "MyDb",
      "collectionName": "MyCollection",
      "sqlQuery": "SELECT * from c where c.id = {id}",
      "connection": "CosmosDBConnection"
    },
    {
      "name": "document",
      "type": "documentDB",
      "databaseName": "DatabaseName",
      "collectionName": "CollectionName",
      "createIfNotExists": true,
      "connection": "CosmosDBConnection",     
      "direction": "out"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    }
  ],
  "disabled": false
}